@foreach (var item in Model)
{
    <tr>
        <td>
            <h1>@Html.DisplayFor(modelItem => item.Titulo)</h1>
        </td>
        <td>
            <div class="card-body">
                <h5>Descrição:</h5><p> "@Html.DisplayFor(modelItem => item.Descricao)"</p>
